<div class="head"> Балансы
<%= link_to 'Добавить баланс', new_balance_path, class: 'btn btn_a right' %>
</div>


<table>
  <thead>
    <tr>
      <th>Date</th>
      <th>Amount</th>
      <th>Account</th>
      <th colspan="2"></th>
    </tr>
  </thead>

  <tbody>
    <% @balances.each do |balance| %>
      <tr>
        <td><%= balance.date %></td>
        <td><%= balance.amount %></td>
        <td><%= balance.account.try(:name) %></td>
        <td><%= link_to 'Edit', edit_balance_path(balance) %></td>
        <td><%= link_to 'Destroy', balance, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
