<div class="expense">
<%= form_with(model: expense, local: true) do |form| %>
  <% if expense.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(expense.errors.count, "error") %> prohibited this expense from being saved:</h2>

      <ul>
      <% expense.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field table_row">
    <div style="width: 150px; float: left; margin-right: 10px">
      <label> Дата</label>
      <%= form.text_field :date, label: false, class: "txt datepicker left" %>
    </div>

    <div class="left" style="width: 250px;  margin-right: 10px">
      <label> Сумма</label>
      <%= form.number_field :amount %>
    </div>

    <div class="left" style="width: 250px;  margin-right: 10px">
      <label> Отчетная</label>
      <%= form.number_field :report_amount %>
    </div>
  </div>

  <div class="field table_row">
    <div class="table_cell" >
      <%= form.label t :shop_id %>
      <v-chosen name="shop" placeholder="Магазин..."/>
    </div>

    <div class="table_cell_last">
      <label>Категория</label>
      <v-chosen name="expense_type" placeholder="Категория..."/>
    </div>
  </div>


  <div class="field">
    <label> Счет</label>
    <v-chosen name="account" placeholder="Счет..."/>
  </div>



  <div class="field">
    <label> Ответственный</label>
    <v-chosen name="user" placeholder="Кто..."/>
  </div>

  <div class="field">
    <label>Комментарий</label>

    <%= form.text_field :comment %>
  </div>

  <div class="actions">
    <%= submit_cancel expenses_url, {disabled: "!f_valid"} %>
  </div>
<% end %>
</div>

<%= render 'form_vue' %>
