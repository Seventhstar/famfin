<!DOCTYPE html>
<html>
  <head>
    <title>Семейная бухгалтерия</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= favicon_link_tag 'heart.png' %>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div class="page-content">
      <% if current_user %>
        <%= render "menu" %>
      <% end %>

      <div class="container"> 
        <%= yield %>
      </div>
    </div>
  </body>
</html>
